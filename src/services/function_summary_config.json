{
  "identify_movie_request": {
    "summary_template": "Movie identified: {movie_name}",
    "extract_fields": ["movie_name"],
    "parameter_fields": [
      {"field": "conversation_history", "type": "count", "label": "messages"}
    ]
  },
  "check_movie_library_status": {
    "summary_template": "Found {title} ({year}) - TMDB ID: {tmdb_id}",
    "extract_fields": ["movie_data.title", "movie_data.year", "tmdb_id"],
    "parameter_fields": ["movie_name"]
  },
  "check_radarr_status": {
    "summary_template": "{movie_title} - Exists: {exists_in_radarr}, Downloaded: {is_downloaded}, Downloading: {is_downloading}",
    "extract_fields": ["movie_title", "exists_in_radarr", "is_downloaded", "is_downloading"],
    "parameter_fields": ["tmdb_id", "movie_data.title"]
  },
  "request_download": {
    "summary_template": "{action} for {movie_title} ({movie_year})",
    "extract_fields": ["action", "movie_title", "movie_year"],
    "parameter_fields": ["movie_data.title", "movie_data.year", "phone_number"]
  },
  "send_notification": {
    "summary_template": "Sent {message_type} notification for {movie_title} ({year})",
    "extract_fields": ["message_type", "movie_title", "year"],
    "parameter_fields": ["phone_number", "message_type", "movie_data.title"]
  },
  "trigger_movie_search": {
    "summary_template": "Search triggered for movie ID: {radarr_movie_id}",
    "extract_fields": ["radarr_movie_id"],
    "parameter_fields": ["radarr_movie_id"]
  },
  "setup_download_monitoring": {
    "summary_template": "Monitoring setup for {movie_title} ({movie_year})",
    "extract_fields": ["movie_title", "movie_year"],
    "parameter_fields": ["movie_title", "movie_year", "phone_number"]
  },
  "default": {
    "summary_template": "{success_status}",
    "extract_fields": ["success"],
    "parameter_fields": []
  }
}
